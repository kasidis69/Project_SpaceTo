<%- include("./partials/header.ejs") %>

    <% if (message){%>
        <p class="text-center text-danger">
            <%-message%>
        </p>
        <% } %>


            <div class="container-contact100">
                <div class="wrap-contact100">
                    <form class="contact100-form validate-form" action="" method="post" enctype="multipart/form-data">
                        <span class="contact100-form-title">
                            Add Workspace
                        </span>

                        <div class="wrap-input100 validate-input bg1"
                            data-validate="Please Type Your New Workspace Name">
                            <span class="label-input100">Workspace name *</span>
                            <input class="input100" name="workspace_name" type="text"
                                placeholder="Enter Your New Workspace Name">
                        </div>

                        <div class="wrap-input100 input100-select bg1">
                            <span class="label-input100">Location building *</span>
                            <div>
                                <select class="select2" name="location">
                                    
                                    <option selected disabled>select location</option>
                        <% location.forEach((locations, index) => { %> 
                        <option><%= locations.location_name %> 
                            <% }) %> 

                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                        </div>


                        <div class="wrap-input100 validate-input bg1 rs1-alert-validate"
                            data-validate="Please Type Your Message">
                            <span class="label-input100">Detail</span>
                            <textarea class="input100" name="detail" placeholder="Your message here..."></textarea>
                        </div>

                        <div class="wrap-input100 validate-input bg1">
                        <div class="w-full dis-none js-show-service">
                           
                                <span class="label-input100">Type</span>
                                <br>
                                <% workspacetype.forEach((workspacetypes, index) => { %> 

                                    <input type="radio" value="<%= workspacetypes.workspace_type_no%>" name="roomtype"
                                         checked="checked" required>
                                        <%= workspacetypes.workspace_type_name%>
                                        <br>
                                    </label>
                              
                                    <% }) %> 

                                    
                                </div>
                            
                            </div>                        

                        <br> <br> <br> <br> <br>
                        <div class="wrap-input100 validate-input bg1 rs1-wrap-input100">
                            <span class="label-input100">Timeopen *</span>
                            <select name="timeopen" class="select2">
                                <option selected disabled>select tiome open</option>
                                <option>08:30
                                <option>09:00
                                <option>09:30
                                <option>10:00
                                <option>10:30
                                <option>11:00
                                <option>11:30
                                <option>12:00
                                <option>12:30
                                <option>13:00
                                <option>13:30
                                <option>14:00
                                <option>14:30
                                <option>15:00
                                <option>15:30
                                <option>16:00
                                <option>16:30

                            </select>
                        </div>

                        <div class="wrap-input100 bg1 rs1-wrap-input100">
                            <span class="label-input100">Timeclose *</span>
                            <select name="timeclose" class="select2">
                                <option selected disabled>select time close</option>
                                <option>08:30
                                <option>09:00
                                <option>09:30
                                <option>10:00
                                <option>10:30
                                <option>11:00
                                <option>11:30
                                <option>12:00
                                <option>12:30
                                <option>13:00
                                <option>13:30
                                <option>14:00
                                <option>14:30
                                <option>15:00
                                <option>15:30
                                <option>16:00
                                <option>16:30

                            </select>
                        </div>

                        <div class="wrap-input100 input100-select bg1">
                            <span class="label-input100">Equipment *</span>
                            <div class="container-eq mt-3">
                                <h6>  (*If you want to add equipment please create equipment first) </h6>    
                                <br> 

                            

                            <select class="select2" name="Equipmentitem">

                            <option selected disabled>select equipment</option>
                            <% equipment.forEach((equipments, index) => { %> 
                                <option><%=equipments.equipment_name%> SerialID: <%= equipments.equipment_item_no%>
                                    <% }) %>         
                                <option>No Equipment  
                                    
                              
                                </select>
                                <br>
                                <br>  
                                <button class="add_form_field">+ Add others equipment </button>
                                
                            </div>

                        </div>


                        <div class="wrap-input100 validate-input bg1"
                            data-validate="Please Type Your New Workspace Name">
                            <span class="label-input100">Photo *</span>
                            <br>
                            <input type="file" name="image" id="workspace-img" class="" required />
                        </div>
                        <div class="container-contact100-form-btn">
                            <button class="contact100-form-btn">
                                <span>
                                    Submit
                                    <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                                </span>
                            </button>
                        </div>



                    </form>
                </div>
            </div>


            <!-- addequipment-->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

            <%- include("./partials/footer.ejs") %>


