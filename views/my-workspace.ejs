<%- include("./partials/header.ejs") %>

  

      <!-- search-->

    <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
      <div class="search">
        <input type="text" name="search" placeholder="Search here...." class="form-control">
        <button type="submit" class="button1" value='Go'>Search</a>

    </div>
    </form>
    
    <a href="/add" target="_blank" class="btn-custom">Add Workspace</a>
    
    <!-- List Card -->
    <% if (workspace.length > 0 ) { %>
        
    <div class="list-card-grid">
        <% workspace.forEach((workspaces, index) => { %> 
            
        <div class="custom-card">
            <img src="/assets/img/<%= workspaces.image %>" alt="Card image cap" />
            <div class="card-body">
                <i class="far fa-building"></i>
                <h5 class="card-title"><%= workspaces.workspace_name %></h5>
                <br/>
                <i class="fas fa-check-circle"></i>
                <p class="status"><%= workspaces.status %></p>
                <i class="far fa-clock"></i>
                <p class="clock">11.00 - 16.00</p>
                <meter class="csprogress" value="7" min="0" max="10"></meter>
                <p class="status">7/10</p>
                <p class="card-text">
                    <%= workspaces.detail %>
                </p>
                <a href="/detail/<%= workspaces.workspace_no %>" target="_blank" class="btn-custom">ดูรายละเอียด</a>
            </div>
        </div>
        
        <% }) %>
    </div>
        
    <% } else { %>
        <p class="text-center">No workspace found.</p>
    <% } %>

        <br>
        <br>

                <%- include("./partials/footer.ejs") %>