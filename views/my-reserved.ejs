      <div class="mt-1 mb-1 spec-1">
        <span class="dot"></span> <span><%= reserves.equipment_name %></span>
        <span class="dot"></span><span><br></span>
      </div>

      <div class="read-more">
        <a href="/checkinworkspace/<%= reserves.reserve_no %>"><button type="button" class="button_check">Check in</button></a>

      </div>
    </div>
  </div>
  <% } %> 
