<%- include("./partials/header.ejs") %>

  <div class="add-css">
    <h2 align='center' style="font-size: 25px;">My Reserved</h2>
  </div>


  <% if (reserve.length > 0 ) { %>

    <% reserve.forEach((reserves, index) => { %> 

      
      <% if (reserves.reserve_status == "RESERVED" ) { %> 
  <div class="blog-card" id="myworksapce">
    <div class="meta">
      <div class="photo"
        style="background-image: url(https://storage.googleapis.com/chydlx/codepen/blog-cards/image-1.jpg)"></div>
      <ul class="details">
        <li class="author"><a href="#"><%= reserves.firstname %></a></li>
        <li class="date"><%= reserves.reserve_datetime_start %></li>
        <li class="tags">
          <ul>
            <li>13:00-15:00</a></li>
           
          </ul>
        </li>
      </ul>
    </div>



    <div class="description">
